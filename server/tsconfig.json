{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "index-mongo.ts",
    "routes-mongo.ts",
    "mongo-storage.ts",
    "mongodb.ts",
    "models.ts",
    "seed.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
