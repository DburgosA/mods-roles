# MongoDB Atlas connection string
# Obtén esto de MongoDB Atlas > Connect > Drivers
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/mods-roles?retryWrites=true&w=majority

# Secret para sesiones (genera uno seguro)
SESSION_SECRET=tu_secret_super_seguro_aqui_cambiar_en_produccion

# URL del frontend en Vercel (actualizar después del deploy)
FRONTEND_URL=https://tu-app.vercel.app

# Puerto (Render lo asigna automáticamente)
PORT=3000

# Entorno
NODE_ENV=production
